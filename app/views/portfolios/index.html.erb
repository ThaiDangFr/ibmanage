<div class="container">
  <div class="row">
    <div class="col-md-12">
      <legend>List portfolio</legend>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-7">
      <table class="table table-responsive table-hover table-bordered ">
	<thead>
	  <tr class="info">
            <th>Name</th>
            <th>Token</th>
            <th colspan=2>Actions</th>
	  </tr>
	</thead>

	<tbody>
	  <% @portfolios.each do |portfolio| %>
	  <tr>
	    <td><%= portfolio.name %></td>
	    <td><%= portfolio.token %></td>
	    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
	    <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <% end %>
	</tbody>

      </table>
    </div>
  </div>

<%= link_to 'New Portfolio', new_portfolio_path, :class => "btn btn-info", :role => "button" %>
<%= link_to 'Back' , root_path,  :class => "btn btn-info", :role => "button" %>

</div>





