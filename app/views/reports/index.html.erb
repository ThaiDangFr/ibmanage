<h4><%= File.expand_path(__FILE__) %></h4>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <legend>List reports</legend>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <table class="table table-responsive table-hover table-bordered ">
        <thead>
          <tr class="info">
            <th>Name</th>
            <th>Code</th>
	    <th>Portfolio</th>
            <th colspan=2>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @reports.each do |report| %>
          <tr>
            <td><%= report.name %></td>
            <td><%= report.code %></td>
	    <td><%= report.portfolio.name %></td>
            <td><%= link_to 'Edit', edit_report_path(report) %></td>
            <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>

<%= link_to 'New Report', new_report_path, :class => "btn btn-info", :role => "button" %>
<%= link_to 'Back' , root_path,  :class => "btn btn-info", :role => "button" %>
</div>
